<label>user#new</label>

<form method="post" action="<%= usuarios_nuevo_path %>">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div>
        <label>Nombre</label>
        <input type="text" placeholder="Ingrese el nombre" name="user[name]"></input>
    </div>
    <div>
        <label>Email</label>
        <input type="email" placeholder="Ingrese el email" name="user[email]"></input>
    </div>
    
    <button type="submit">Enviar</button>
</form>